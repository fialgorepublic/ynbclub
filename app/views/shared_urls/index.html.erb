<div class="col-md-9">
  <div class="row">
    <div class="col-md-12">

      <h1 class="card-header"><i class="fa fa-universal-access"></i> Shared Urls</h1>
      <hr>
    </div>
  </div>

  <div class="row m-t-30">
    <div class="col-md-12">
      <div class="card-body">
        <div class="affiliate_table_responsive">
          <table class="table table-striped table-bordered" id="urls_table">
            <thead>
              <tr>
                <th>Id#</th>
                <th>Shared By</th>
                <th>Platform</th>
                <th>URL</th>
                <th>Shared at</th>
              </tr>
            </thead>
            <tbody>
              <% @shared_urls.each do |shared_url| %>
                <tr>
                  <td><%= shared_url.user_name %>
                  <td><%= shared_url.id %></td>
                  <td><%= platform(shared_url) %></td>
                  <td><%= link_to shared_url.url, shared_url.url, target: :blank %></td>
                  <td><%= shared_at(shared_url) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="featured-pagination">
    <div>
      <ul class="pagination pagination-md">
        <%= will_paginate @shared_urls,renderer: BootstrapPagination::Rails %>
      </ul>
    </div>
    <div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#urls_table').dataTable({
      "paging": false,
      "info": false
    });
  });
</script>
