      <table class="flexible" width="600"  cellspacing="0" cellpadding="0" align="center" style="margin:0 auto !important; border-radius:3px; background:#FEFEFE;">
        <tbody>
        <tr>
          <td>
            <table>
              <tbody>
              <tr>
                <td style="padding:50px 50px 50px;">
                  <table>
                    <tbody>
                    <tr>
                      <td style="padding-bottom:40px;">
                        <%= image_tag('https://beta.saintlbeau.com/logo.png', width: "180px", alt: "image") %>
                      </td>
                    </tr>
                    <tr>
                      <td style="color:#566277; text-align:center; font-size:20px; letter-spacing:0.5px; font-family: 'Lato', sans-serif; margin:0 0 0.01em!important; padding-bottom:20px;">
                        <b style="color:#566277;">Hello <%= @user.name %></b>
                      </td>
                    </tr>
                    <tr>
                      <td style="color:#797E88; text-align:center; font-size:15px; letter-spacing:0.5px; font-family: 'Lato', sans-serif; margin:0 !important; padding:0 0 40px;">
