<div class="col-md-9">
  <div class="order-dropDown-style">
    <div class="row">
      <div class="col-md-12">
        <h1 class="card-header">
          Search blogs from medium.com
        </h1>
        <hr>
      </div>

      <div class="col-md-10">
        <div class="col-lg-12">
          <%= form_tag scrap_blogs_path, method: :get do %>
            <div class="form-group">
              <%= text_field_tag :blog_name, nil, class: "form-control", required: true %>
            </div><!-- /input-group -->

            <br>
            <div class="text-center">
              <%= submit_tag 'Search', class: 'btn btn-lg btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
