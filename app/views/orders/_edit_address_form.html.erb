<%= form_for @order, url: order_path(@order), method: "PUT", html:  { id: "edit_address", class: 'form-horizontal form-simple' }  do |form| %>
  <div class="modal-body">
    <h4 class=" text-center">Edit Address</h4>

    <div class="form-group">
      <%= form.label :address %>
      <%= form.text_field :address, value: @order.address, class: "form-control", required: true, id: "address" %>
    </div>

    <div class="form-group">
      <%= form.label :City %>
      <%= form.select :city, @cities , {}, { include_blank: 'Select City', class: "form-control", required: true, id: "city-select" } %>
    </div>

    <%= form.hidden_field :order_id, value: @order.id %>
    <div id="district_provinces">
    </div>

    <div id="wards">
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <%= form.submit :class => 'btn btn-success' %>
    </div>
  </div>
  <div class="error error-holder">

  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    $('#city-select').select2();
  })

  $('#city-select').change(function(){
    city_id = $(this).val();
    order_id = $('#order_order_id').val()
    $.ajax({
      url: `/orders/district_cities?city_id=${city_id}&order_id=${order_id}`,
      type: 'get',
      contentType: 'json',
      error: function () {
        $('.loader').hide();
        alert('Error');
      }
    });
  });
</script>
