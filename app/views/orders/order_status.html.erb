<h1 style="text-align: center;"><%= t('order_status.title')%></h1>

<div class="row">
  <div class="col-md-offset-1 col-md-3" style="top: 50px;">
    <%= form_tag order_status_path, method: "get" do %>
  <%= label_tag(:search, t('order_status.checking_order')) %>
  <br>
  <%= text_field_tag :order_id, params[:order_id], class: "form-control set-border-radius", placeholder: t('order_status.placeholder'), style: "width: 310px;" %>
  <br>
  <%= submit_tag(t('order_status.search'), class: 'btn btn-primary set-border-radius') %>
<% end %>


<% if @order_status.present? %>
  <h1><%= t('order_status.status') %>: <%= @order_status %></h1>
<% end %>
  </div>  
</div>
