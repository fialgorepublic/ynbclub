<h1 style="text-align: center;">Check Order Status</h1>

<div class="row">
  <div class="col-md-offset-1 col-md-3" style="top: 50px;">
    <%= form_tag order_status_path, method: "get" do %>
  <%= label_tag(:search, "Checking Order") %>
  <br>
  <%= text_field_tag :order_id, params[:order_id], class: "form-control", placeholder: "order number", style: "width: 310px;" %>
  <br>
  <%= submit_tag("search", class: 'btn btn-primary') %>
<% end %>


<% if @order_status.present? %>
  <h1>order status: <%= @order_status %></h1>
<% end %>
  </div>  
</div>
