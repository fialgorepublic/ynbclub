<div class="col-md-9">
  <% if current_user.is_admin? %>
    <h1>All Orders</h1>
  <% else %>
    <h1>My Orders</h1>
  <% end %>
  <hr>
  <table class="table table-striped table-bordered" id="my-orders">
    <thead>
    <tr>
      <th>Order#</th>
      <th>Date</th>
      <% if current_user.is_admin? %>
        <th>Customer</th>
      <% end %>
      <th>Payment Status</th>
      <th>Fulfillment Status</th>
      <th>Price</th>
    </tr>
    </thead>

    <tbody>

    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order_date(order) %></td>
        <% if current_user.is_admin? %>
          <td><%= customer_name(order) %></td>
        <% end %>
        <td><%= order.financial_status %></td>
        <td><%= fulfillment_status(order) %></td>
        <td><%= number_with_delimiter(order.total_price, delimiter: ".") %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>\
