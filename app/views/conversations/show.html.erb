<div class="user_conversation col-md-6">
  <div class="middle-row-grp">
    <div class="col-md-12">
      <div class="lib-panel">
        <div class="row box-shadow-conversation-profile-admin">
          <div class="flex-sb">
            <div class="flex-l">
              <div class="">
                <div class="flex-l">
                  <div class="">
                    <%= image_tag author_avatar(@conversation), width: "100%", class: 'author-image' %>
                  </div>

                  <div class="m-l-10">
                    <p class="p-l"><%= group_user_name(@conversation.user) %></p>
                    <p class="p-b">Saint L beau</p>
                  </div>
                </div>
              </div>
              <div class="m-l-10 mob-m-l-0">
                <div class="flex-l">
                  <div class="">
                    <img class="" src="/assets/calender.png" width="100%">
                  </div>

                  <div class="m-l-10">
                    <p class="p-b m-t-8"><%= posted_date(@conversation) %></p>
                  </div>
                </div>
              </div>
            </div>

            <div class="grp-edit-delete-icon ">
              <a data-url="" data-name="lorem ipsum" class=" delete-group-link" href="#">
                <i class="fa fa-trash inneer font-awesome-edit-profile" aria-hidden="true"></i>
              </a>
            </div>
          </div>

          <div class="join-grp-dscptn">
            <h2><%= @conversation.subject %></h2>
            <div class="comment more">
              <%= @conversation.body&.html_safe %>
            </div>

            <div class="flex-sb">
              <div class="flex-l  m-t-8">
                <div class="">
                  <i class="fa fa-comment fs-20" style="color: #256664;"></i>
                </div>
                <div class="m-l-10 m-t-12">
                  <p class="fs-12"><%= @conversation.replies_count %></p>
                </div>
                <div class="m-l-10">
                  <i class="fa fa-heart fs-20" style="color: red;"></i>
                </div>
                <div class="m-l-10 m-t-8">
                  <p class="fs-12 m-t-3"><%= @conversation.likes_count %></p>
                </div>
              </div>
              <div class="m-t-8">
                <%= link_to 'New Reply', reply_conversation_path(@conversation), class: "btn btn-primary new_reply_btn" %>
              </div>
            </div>
          </div>

          <% unless @conversation.replies_count.zero? %>
          <h3><%= @conversation.replies_count %> Replies</h3>
          <hr>

          <div id='replies'>
            <%= render partial: 'reply', collection: @conversation.replies, as: :reply %>
          </div>
          <% end %>

          <ul class="pagination f-l">
            <li><a href="#">1</a></li>
            <li class="active"><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">.</a></li>
            <li><a href="#">.</a></li>
            <li><a href="#">.</a></li>
            <li><a href="#">Next&gt;</a></li>
            <li><a href="#">Last&gt;&gt;</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="col-md-3">
  <h2 class="sidebar-h-con">Conversation Stats</h2>
  <div class="">
    <div class="lib-panel">
      <div class="row box-shadow-conversation-profile-admin">
        <div class="flex-c social-con-padding">
          <div class="">
            <i class="fa fa-heart color-for-icon fs-20" style="color: red;" width="100%"></i>
            <p class="m-0"><%= @conversation.likes_count %></p>
          </div>

          <div class="">
            <i class="fa fa-comment color-for-icon-con fs-20" width="100%"></i>
            <p class="m-0"><%= @conversation.replies_count %></p>
          </div>

          <div class="">
            <i class="fa fa-eye color-for-icon-con fs-20" width="100%"></i>
            <p class="m-0">345794</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if @related_posts.present? %>
  <h2 class="sidebar-h-con">Related Posts</h2>
  <%= render partial: 'related_post', collection: @related_posts, as: :conversation %>
  <% end %>

  <h2 class="sidebar-h-con">Share on social network</h2>
  <div class="">
    <div class="lib-panel">
      <div class="row box-shadow-conversation-profile-admin-middle">
        <div class="flex-l social-con-padding">
          <div class="">
            <img src="/assets/fb.png">
          </div>
          <div class="">
            <img src="/assets/tw.png">
          </div>
          <div class="">
            <img src="/assets/m.png">
          </div>
          <div class="">
            <img src="/assets/p.png">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>