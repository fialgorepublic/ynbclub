<% if reply_counter % 2 == 0 %>
<div class="simple-comment-div bbbb">
  <div class="flex-l pt-10">
    <div class="">
      <%= image_tag author_avatar(reply), width: "100%", class: 'author-image' %>
    </div>

    <div class="m-l-10 ">
      <p class="p-b m-p-0 text-left"><%= group_user_name(reply.user) %></p>
      <p class="p-l"><%= posted_date(reply) %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="comment more text-left pl-40">
        <%= reply.body.html_safe %>
      </div>

    </div>
  </div>
  <div class="flex-sb">
    <div class="flex-l  m-t-8">
      <div class="">
        <i class="fa fa-heart fs-20" style="color: red;"></i>
      </div>

      <div class="m-l-10 m-t-8">
        <p class="fs-12 m-t-3"><%= reply.likes_count %></p>
      </div>
      <div class="m-l-10">
        <i class="fa fa-comment fs-20" style="color: #256664;"></i>
      </div>

      <div class="m-l-10 m-t-12">
        <%= link_to reply do %>
        <p class="fs-12"><%= reply.replies_count %></p>
        <% end %>
      </div>


    </div>

    <div class="m-t-8">
      <%= new_reply_link(reply) %>
    </div>
  </div>
</div>
<% else %>
<!-- blog quote -->
<div class="quoted-comment-div bbbb">
  <div class="p-t-10">
    <blockquote class="blockquotee">
      <div class="flex-l pt-10">
        <div class="">
          <%= image_tag author_avatar(reply), width: "100%", class: 'author-image' %>
        </div>
        <div class="m-l-10 ">
          <p class="p-b m-p-0 text-left"><%= group_user_name(reply.user) %></p>
          <p class="p-l"><%= posted_date(reply) %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="comment more text-left pl-40">
            <%= reply.body.html_safe %>
          </div>
        </div>
      </div>
      <div class="flex-sb">
        <div class="flex-l  m-t-8">

          <div class="">
            <i class="fa fa-heart fs-20" style="color: red;"></i>
          </div>

          <div class="m-l-10 m-t-8">
            <p class="fs-12 m-t-3"><%= reply.likes_count %></p>
          </div>
          <div class="m-l-10">
            <i class="fa fa-comment fs-20" style="color: #256664;"></i>
          </div>

          <div class="m-l-10 m-t-12">
            <%= link_to reply do %>
            <p class="fs-12"><%= reply.replies_count %></p>
            <% end %>
          </div>

        </div>

        <div class="m-t-8">
          <%= new_reply_link(reply) %>
        </div>
      </div>
    </blockquote>
  </div>
</div>
<% end %>