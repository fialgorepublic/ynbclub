<div class="<%= add_container %>">
  <div class="<%= blog_screen_size %>">
    <div class="banner pos-rel-banner text-center">
      <%= image_tag @page.conversation_banner.variant(combine_options: { resize: banner_size, gravity: 'Center', extent: banner_size, background: "grey", quality: 95 }), width: '100%' %>
      <div class="pos-abs-banner">
        <h1 class="">Conversations about everything.</h1>
        <h3>Join groups to find interesting content <br> and meet amazingf insider members.</h3>
        <%= form_tag search_conversations_path, method: :get, remote: true, id: 'search-group-form' do |f| %>
          <div class="wrap">
            <div class="searc">
              <div class="input-group">
                <%= text_field_tag :conversation_subject, nil, class: "form-control search-by-title input-srch email-border 
                    boder-focus-search", placeholder: "Search Conversations", required: true %>
                <span class="input-group-addon remove-border 
                  group-srch-p-0"><i class="glyphicon glyphicon-remove color-srch-icon cross-icon "></i></span>
                <span class="input-group-addon search-border"><i
                    class="glyphicon glyphicon-search color-srch-icon"></i></span>
              </div>
              <div class="groups-search-result">
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 blog_banner_btn">
        <% if current_user&.is_admin? %>
          <%= link_to t('blogs.index.edit_banner_label'), "#conversationBannerUploadModal", data: { toggle: 'modal', target: '#conversationBannerUploadModal' }, class: 'btn edit_banner_btn btn-primary', id: 'conversation-banner-upload' %>
        <% end %>
      </div>
    </div>

    <div class="row" style="margin-top: 10px;">
      <div class="post-heading blog-redesign-style">
        <div class="col-md-4">
          <div class="heading-featured">
            <h1>Conversations</h1>
          </div>
        </div>

        <% if @conversations.count > 0 %>
        <div class="col-md-4 post-sorting">
          <p>SORTING</p>
          <%= select_tag :sort_type, options_for_select(conversation_sort_types, selected: params[:sort_type]), class: 'sorting-fltr', id: 'subject-sort' %>
        </div>
        <% end %>

        <div class="col-md-3 add_blog_btn pull-right">
          <%= link_to "+ Start New Conversation", new_conversation_path, class: "btn btn-primary new_blog_btn" if current_user && current_user.is_admin? %>
        </div>
      </div>
    </div>

    <div class="row" id="conversations">
      <%= render @conversations %>
    </div>
    <br />

    <%= hidden_field_tag :page, @next_page %>

    <div class="row show-more-button">
      <div class="col-md-8">
        <% unless @conversations.current_page == @conversations.total_pages %>
        <div class="custom-showMore-btn pull-right">
          <%= link_to "javascript:void(0);", class: "btn btn-primary showMore-btn-style", id: "load-more", data: { url: conversations_path } do %>
          <i class="fa fa-plus"></i> <%= t('blogs.index.show_more_label') %>
          <% end %>
        </div>
        <% end %>
      </div>

      <div class="col-md-4">
        <a href="javascript:" id="custom-topPage-btn"> <i class="fa fa-angle-up"></i></a>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div id="group-delete-modal" class="modal fade groups-modal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close mob-close-btn" data-dismiss="modal">&times;</button>
      </div>

      <div class="modal-body">
        <div class="text-center">
          <h1 class="modall-title group-title"> </h1>
          <p>you will not be able to restore it then</p>
        </div>
        <div class="text-center">
          <div class="text-center">
            <%= link_to 'Yes', '', class: "btn btn-primary new_group-modal_b_btn", id: "delete-modal-group-link", method: :delete %>
            <a class="btn btn-primary new_group-modal_btn" , id='cancel-delete'>No</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="conversationBannerUploadModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <%= render 'upload_banner' %>
    </div>
  </div>
</div>
