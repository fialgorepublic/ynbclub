<script>


  $(".post-sorting").removeClass("add-z-minus");
  $(".class-z").removeClass("add-z-minus");
  $('.con-search-result').hide();
  $('.crosss-icon').hide();
  $(".con-search-by-title").on('keyup', function (e) {
    if (e.keyCode === 13) {
      e.preventDefault();
      $(".post-sorting").addClass("add-z-minus");
      $(".class-z").addClass("add-z-minus");
      $('.crosss-icon').fadeIn();
      $('.con-search-result').show();

    }
  });

  $('.crosss-icon').click(function () {
    fadeOutContent();
  });



  function fadeOutContent() {

    $('.crosss-icon').fadeOut();
    $('.con-search-result').fadeOut();
    // $(ele).val('');
    $(".post-sorting").removeClass("add-z-minus");
    $(".class-z").removeClass("add-z-minus");
  }
  $(".con-search-by-title").keyup(function (e) {

    e.preventDefault();
    $(".post-sorting").addClass("add-z-minus");
    $(".class-z").addClass("add-z-minus");
    if ($(this).val() == '') { return; }
    $('.crosss-icon').fadeIn();
    $('.con-search-result').show();
  });

</script>