$('.loader').hide();
<% if params[:page].present? %>
  $('#conversations').append('<%= j render @conversations %>');
<% else %>
  $('#groups').html('<%= j render @conversations %>');
<% end %>
$('#page').val('<%= @next_page %>')
$('#load-more').show();
currentPage = '<%= @conversations.current_page %>';
totalPages  = '<%= @conversations.total_pages %>';
if (currentPage == totalPages) {
  $('#load-more').hide();
}
