<div class="col-md-9">
  <div class="middle-row-grp">
    <div class="col-md-12 class-z">
      <div class="lib-panel">
        <div class="row box-shadow-conversation-profile-admin">
          <div class="flex-sb">
            <div class="flex-l">
              <div class="">
                <div class="flex-l">
                  <div class="">
                    <%= image_tag author_avatar(conversation), width: "100%", class: 'author-image' %>
                  </div>

                  <div class="m-l-10">
                    <p class="p-l"><%= group_user_name(conversation.user) %></p>
                    <p class="p-b">Saint L beau</p>
                  </div>
                </div>
              </div>

              <div class="m-l-10 mob-m-l-0">
                <div class="flex-l">
                  <div class="">
                    <img class="" src="/assets/calender.png" width="100%">
                  </div>

                  <div class="m-l-10">
                    <p class="p-b m-t-8"><%= posted_date(conversation) %></p>
                  </div>
                </div>
              </div>

              <div class="m-l-10 mb-l-0">
                <%= new_reply_link(conversation) %>
              </div>
            </div>

            <div class="grp-edit-delete-icon ">
              <a class="" href="#">
              </a> <a data-url="" data-name="lorem ipsum" class=" delete-group-link" href="#">
                <i class="fa fa-trash inneer font-awesome-edit-profile" aria-hidden="true"></i>
              </a>
            </div>
          </div>

          <div class="join-grp-dscptn">
            <%= link_to conversation do %>
            <h2><%= conversation.subject %></h2>
            <% end %>

            <div class="comment more">
              <%= conversation.body&.html_safe %>
            </div>

          </div>

          <% if conversation.replies.present? %>
          <% reply = conversation.replies.first %>
          <h5>Latest reply</h5>
          <div class="flex-l pt-10">
            <div class="">
              <%= image_tag author_avatar(reply), width: "100%", class: 'author-image' %>
            </div>

            <div class="m-l-10 ">
              <p class="p-b m-p-0 text-left"><%= group_user_name(reply.user) %></p>
              <p class="p-l"><%= posted_date(reply) %></p>
            </div>
          </div>

          <div class="row bbbb">
            <div class="col-md-12">
              <div class="comment more text-left pl-40 ">
                <%= reply.body&.html_safe %>
              </div>
            </div>
          </div>
          <% end %>


          <div class="flex-sb">
            <div class="flex-l  m-t-8">
              <div class="">
                <i class="fa fa-comment fs-20" style="color: #256664;"></i>
              </div>

              <div class="m-l-10 m-t-12">
                <p class="fs-12"><%= conversation.replies_count %></p>
              </div>

              <div class="m-l-10">
                <%= like_dislike_link(conversation) %>
              </div>

              <div class="m-l-10 m-t-8">
                <p class="fs-12 m-t-3"  id="likes-count-<%= conversation.id %>"><%= conversation.likes_count %></p>
              </div>
            </div>

            <div class="m-t-8">
              <%= new_reply_link(conversation) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
