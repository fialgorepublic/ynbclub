<div class="dashboard-holder">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "shared/side_bar" %>
    </div>

    <div class="col-md-9">
      <% if @referral_sales.first.present? %>
        <h1>Referral Sales</h1>
        <hr>
        <table class="table table-striped table-bordered" id="referral-sales">
          <thead>
            <tr>
              <th>Order#</th>
              <th>Price</th>
              <th>Customer Name</th>
              <th>Email</th>
              <th>Shop Name</th>
              <th>Address</th>
              <th>Ambassador</th>
            </tr>
          </thead>

          <tbody>
            <% @referral_sales.each do |referral_sale| %>
              <tr>
                <td><%= referral_sale.order_no %></td>
                <td><%= number_with_delimiter(referral_sale.price, delimiter: ".") %></td>
                <td><%= referral_sale.name %></td>
                <td><%= referral_sale.email %></td>
                <td><%= referral_sale.shopdomain %></td>
                <td><%= referral_sale.address %></td>
                <td><%= referral_sale.user.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h1>No Sales Till Yet</h1>
        <hr>
      <% end %>
    </div>
  </div>
</div>
