<%= form_with(model: category, local: true) do |form| %>
  <div class="form-group">
    <%= form.label t('categories.name_label') %>
    <%= form.text_field :name, id: :category_name, class: 'form-control', required: true %>
  </div>

  <div class="actions">
    <%= form.submit action_name == 'edit' ? t(:update_label) : t('categories.new.create_category_label'), class: 'btn btn-success' %>
  </div>
<% end %>
