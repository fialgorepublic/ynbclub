<div class="col-md-9">

  <h1><%= t('categories.index.title') %></h1>
  <hr>
<div class="table-responsive">
  <table class="table">
    <thead>
    <tr>
      <th><%= t('categories.name_label') %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to t(:show_label), category %></td>
          <td><%= link_to t(:edit_label), edit_category_path(category) %></td>
          <td><%= link_to t(:destroy_label), category, method: :delete, data: { confirm: t(:delete_confirmation) } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>
  <br>

  <%= link_to t('categories.index.new_btn_label'), new_category_path, class: 'btn btn-primary set-border-radius' %>
</div>
