<div class="dashboard-holder">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "shared/side_bar" %>
    </div>
    <div class="col-md-9">

      <div class="row">
        <div class="col-md-12">
          <div class="main">
            <h2> <i class="fa fa-share-alt fa-lg fa-fw sidebar-icon"></i>Edit Share With Friends</h2>
          </div>
          <hr>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="box-shadow box-shadow-pd-sm edit-share-box">
            <div class="row">
              <div class="col-md-12 text-right cu-btn-holder">
                <button class="btn btn-primary">Save</button>
                  <button class="btn btn-default">Cancel</button>
              </div>
            </div>
            <div class="row">
            <div class="col-md-12">
               <div class="form-group">
                  <label>Enter Text Here</label>
                  <textarea class="form-control editor"></textarea>
               </div>
            </div>
            <div class="col-md-12">
               <div class="form-group">
                  <label>Edit Link </label>
                  <textarea class="form-control editor"></textarea>
               </div>
            </div>
             <!--    <p class="text-center"> You'll receive <%= get_point(6) %> coins on the saint l' Beau web site for every registered friend by your invitation link. your friend will receive <%= get_point(6) %>  coins too</p>
                <p class="text-center" data-target="#coinModal" data-toggle="modal"><a href="javascript:void(0);">How can I earn and spend coins?</a></p> -->
                
                <div class="col-md-12">
                  <div class="form-box" style="overflow: hidden">

                  <input type="text" style="width: 68%;
                          float: left;
                          font-size: 20px; word-wrap: break-word" id="clipboardShareFriend" value=" https://beta.saintlbeau.com?invite=<%= current_user.email %>">
                    <a href="javascript:void(0);" onclick="clipboardShareFriend()"  class="btn btn-default pull-right">Copy Share link</a>
                  </div>
                </div>
            
            </div>


            <% url = "https://beta.saintlbeau.com?invite=#{current_user.email}" %>
            <div class="row text-center input-holder" >
              <div class="col-md-4 ">
                <a href="https://www.facebook.com/sharer/sharer.php?u=<%= url %>" target="_blank" class="btn btn-primary btn-block"> <i class="fa fa-facebook"></i> <input type='text' placeholder="Share on facebook"> </a>
              </div>
              <div class="col-md-4">
                <!--<a href="https://twitter.com/intent/tweet?text=“<%#= "testing here" %>”&url=<%#= url %>" target="_blank" class="btn btn-info btn-block"> <i class="fa fa-twitter"></i> Share on Twitter</a>-->
                <a href="https://twitter.com/intent/tweet?url=<%= url %>" target="_blank" class="btn btn-info btn-block"> <i class="fa fa-twitter"></i> <input type='text' placeholder="Share on Twitter"> </a>
              </div>
              <div class="col-md-4">
                <a href="mailto:someone@example.com?Subject=Hello&Body=<%= url %>" target="_top" class="btn btn-warning btn-block"> <i class="fa fa-envelop"></i> <input type='text' placeholder="Share on Mail"> </a>
              </div>

            </div>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>

