<div class="dashboard-holder snapshot-dashboard-holder">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "shared/side_bar" %>
    </div>
    <div class="col-md-9 m-b-50">

      <div class="row">
        <div class="col-md-12">
          <div class="main">
            <h2> <i class="fa fa-share-alt fa-lg fa-fw sidebar-icon"></i>Take a snapshot and Share </h2>
          </div>
          <hr>
        </div>
      </div>

      <div class="row">
        <% if current_user.is_admin? %>
          <div class="row">
            <div class="col-md-11 text-right cu-btn-holder">
              <%= link_to edit_take_snapshots_path, class: "btn btn-default" do %>
                <i class="fa fa-pencil"></i> Edit
              <% end %>
            </div>
          </div>
        <% end %>
        <div class="col-md-5 col-md-offset-1">
          <div class="box-shadow m-h-400 sm-pd">

            <div class="box-1">
              <div class="row">
                <div class="col-md-12">
                  <div class="overlay-layer">
                    <%= image_tag @snapshot.step1_avatar.url, width: "100%", id: "step1_avatar_show" %>
                 </div>
                </div>
                <div class="stepone">1</div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <div class="image-content-snap">
                  <span><%= @snapshot.step1_text.html_safe %></span>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>

        <div class="col-md-5">
          <div class="box-shadow  m-h-400 sm-pd">

            <div class="box-1">
              <div class="row">
                <div class="col-md-12">
                  <div class="overlay-layer">
                    <%= image_tag @snapshot.step2_avatar.url, width: "100%", id: "step2_avatar_show" %>
                  </div>
                </div>
                <div class="stepone">2</div>
              </div>


              <div class="row">
                <div class="col-md-12">
                  <div class="image-content-snap">
                    <span><%= @snapshot.step2_text.html_safe %></span>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-5 col-md-offset-1">
          <div class="box-shadow m-h-400 sm-pd">

            <div class="box-1">
              <div class="row">
                <div class="col-md-12">
                  <div class="overlay-layer">
                    <%= image_tag @snapshot.step3_avatar.url, width: "100%", id: "step3_avatar_show" %>
                  </div>
                </div>
                <div class="stepone">3</div>
              </div>


              <div class="row">
                <div class="col-md-12">
                  <div class="image-content-snap">
                    <span><%= @snapshot.step3_text.html_safe %></span>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>

        <div class="col-md-5">
          <div class="box-shadow  m-h-400 sm-pd">

            <div class="box-1">
              <div class="row">
                <div class="col-md-12">
                  <div class="overlay-layer">
                    <%= image_tag @snapshot.step4_avatar.url, width: "100%", id: "step4_avatar_show" %>
                  </div>
                </div>
                <div class="stepone">4</div>
              </div>


              <div class="row">
                <div class="col-md-12">
                  <div class="image-content-snap">
                    <span><%= @snapshot.step4_text.html_safe %></span>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>



      </div>

      <div class="row">
        <div class="col-md-12 text-center">
          <a href="/step_one" class="btn btn-default btn-lg">Get Started</a>
        </div>
      </div>

    </div>
  </div>
</div>

