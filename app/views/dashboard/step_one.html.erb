<div class="col-md-9">
  <div class="row">
    <div class="col-md-12">
      <div class="main">
        <h2> <i class="fa fa-share-alt fa-lg fa-fw sidebar-icon"></i><%= t('sidebar.take_and_share_label') %></h2>
      </div>
      <hr>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="box-shadow">
        <div class="row">
          <div class="col-md-12">
            <p class="text-center"><%= t('step_one_label') %> <strong> #saintlbeau</strong></p>
            <div class="col-md-12">
              <div class="" style="overflow: hidden">
                <input id="linkUrl" type="text" placeholder="Link to facebook, instagram, twitter post" class="form-control">

              </div>
            </div>

            <div class="col-md-2 col-md-push-5 m-t-30">
              <a href="javascript:void(0);" onclick="gotToStepTwo();" class="btn btn-primary btn-lg"><%= t(:continue_label) %></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="main">
        <h2> <i class="fa fa-share-alt fa-lg fa-fw sidebar-icon"></i><%= t('shared_urls.title') %></h2>
      </div>
      <hr>
    </div>
  </div>

  <table class="table table-striped table-bordered" id="shared-urls">
    <thead>
      <tr>
        <th><%= t('shared_urls.table_headers.id_label') %>#</th>
        <th><%= t('shared_urls.table_headers.shared_by_label') %></th>
        <th><%= t('shared_urls.table_headers.platform_label') %></th>
        <th><%= t('shared_urls.table_headers.url_label') %></th>
        <th><%= t('shared_urls.table_headers.shared_at_label') %></th>
      </tr>
    </thead>
    <tbody>
      <% @shared_urls.each do |shared_url| %>
        <tr>
          <td><%= shared_url.id %></td>
          <td><%= shared_url.user_name %>
          <td><%= platform(shared_url) %></td>
          <td><%= link_to shared_url.url, shared_url.url, target: :blank %></td>
          <td><%= shared_at(shared_url) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  function gotToStepTwo(){
    var linkUrl = $("#linkUrl").val();
    if (linkUrl === ""){
      alert("Please Enter link first");
    }else{
      window.location.href = "/step_two?url="+linkUrl
    }
  }
</script>
