<%= form_for @payment, url: payments_path, :remote => true, method: "POST", :html => {:id =>"new_payment", :class => 'form-horizontal form-simple'}  do |form| %>
    <div class="modal-body">
      <h4 class=" text-center"><%= t('payments.modal.create_payment_label') %></h4>

      <div class="form-group">
        <%= form.label  t('payments.table_headers.email_label') %>
        <%= form.collection_select :user_id, User.joins(:role).where("roles.name = 'Brand ambassador'"), :id, :email , {:include_blank => 'Select Email'}, html_options = {:class=>"set-width-for-field", required: true, id: "user-id-select"} %>
      </div>

      <div class="form-group">
        <%= form.label t('payments.table_headers.amount_label') %>
        <%= form.number_field :amount, id: :payment_amount, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= form.label t('payments.table_headers.number_math_label') %>
        <%= form.text_field :number_math, id: :payment_number_math, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= form.label t('payments.table_headers.note_label') %>
        <%= form.text_field :note, id: :payment_note, class: 'form-control' %>
      </div>

      <!--<div class="form-group">-->
        <!--<%#= form.label :recipient_name %>-->
        <!--<%#= form.collection_select :user_id, User.joins(:role).where("roles.name = 'Brand ambassador'"), :id, :name , {:include_blank => 'Select Recipient name'}, html_options = {:class=>"form-control"} %>-->
      <!--</div>-->

      <!--<div class="form-group">-->
        <!--<%#= form.label :status %>-->
        <!--<%#= form.text_field :status, id: :payment_status, class: 'form-control' %>-->
      <!--</div>-->

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t(:close_label) %></button>
        <%= form.submit t('payments.modal.create_btn_label'), :class => 'btn btn-success' %>
      </div>
    </div>
    <div class="error error-holder">

    </div>

<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    $('#user-id-select').select2();
  })
</script>
