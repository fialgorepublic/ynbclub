<div class="tab-pane" id="blogs_tab">
  <div class="">
    <div class="row">
      <div class="heading-featured col-md-7">
        <h1><%= t('dashboard.index.title.your_blogs') %></h1>
      </div>

      <%= render partial: 'users/blogs/filters', locals: { type: 'your-blogs', user: user } %>
    </div>

    <div class="row" id='your-blogs'>
    </div>

    <div class="row">
      <div class="col-md-12 pagination-div flex-sb">
        <div class="">
          <%= link_to t('dashboard.index.title.previous_page'), user_blogs_path(user_id: user.id, your_blogs_page: @your_blogs&.previous_page, type: 'your-blogs'), remote: true, id: 'your-blogs-previous', class: @your_blogs&.previous_page ? '' : 'hidden'  %>
        </div>

        <div class="">
          <%= link_to t('dashboard.index.title.next_page'), user_blogs_path(user_id: user.id, your_blogs_page: @your_blogs&.next_page, type: 'your-blogs'), remote: true, id: 'your-blogs-next', class: @your_blogs&.next_page ? '' : 'hidden' %>
        </div>
      </div>
    </div>
    <hr>
  </div>

  <div class="row">
    <div class="heading-featured col-md-7">
      <h1><%= t('dashboard.index.title.liked_blogs') %></h1>
    </div>

    <%= render partial: 'users/blogs/filters', locals: { type: 'liked-blogs', user: user } %>
  </div>

  <div class="row" id='liked-blogs'>
  </div>

  <div class="row">
    <div class="col-md-12 pagination-div flex-sb">
      <div class="text-left">
        <%= link_to t('dashboard.index.title.previous_page'), user_blogs_path(user_id: user.id, liked_blogs_page: @liked_blogs&.previous_page, type: 'liked-blogs'), remote: true, id: 'liked-blogs-previous', class: @liked_blogs&.previous_page ? '' : 'hidden'  %>
      </div>

      <div class="text-right">
        <%= link_to t('dashboard.index.title.next_page'), user_blogs_path(user_id: user.id, liked_blogs_page: @liked_blogs&.next_page, type: 'liked-blogs'), remote: true, id: 'liked-blogs-next' %>
      </div>
    </div>
  </div>
  <hr>
</div>

<div class="modal fade" id="new-blog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
  <div class="modal-dialog" style="width: 80%">
    <div class="modal-content" style="width: 100%">
      <div class="modal-header">
        <button type="button" class="close" id="remove-modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">
          <span class="">Create New Blog
          </span>
        </h4>
      </div>
      <div id="create-blog">

        </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
