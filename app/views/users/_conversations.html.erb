
<div class="tab-pane" id="conversations_tab">
  <div class="row" style="margin-top: 10px;">
    <div class="post-heading blog-redesign-style">
      <div class="col-md-4">
        <div class="heading-featured">
          <h1>Conversations</h1>
        </div>
      </div>

      <div class="col-md-2 ">

      </div>

      <div class="col-md-2">
        <%= render partial: 'users/conversations/filters', locals: { user: user, type: 'your-conversations' } %>
      </div>

      <div class="col-md-4 add_blog_btn pull-right">
        <a class="btn btn-primary new_blog_btn" href="/groups/new">+ Start New Conversation </a>
      </div>
    </div>
  </div>

  <div id="your-conversations" class="row">
  </div>


  <div class="row">
    <div class="col-md-12 pagination-div flex-sb">
      <div class="text-left">
        <%= link_to '← Previous Page', '#', remote: true, id: 'your-conversations-previous', class: @your_conversations&.previous_page ? '' : 'hidden' %>
      </div>

      <div class="text-right">
        <%= link_to 'Next Page →', '#', remote: true, id: 'your-conversations-next', class: @your_conversations&.next_page ? '' : 'hidden' %>
      </div>
    </div>
  </div>
  <hr>

  <!-- liked conversation start -->


  <div class="row" style="margin-top: 10px;">
    <div class="post-heading blog-redesign-style">
      <div class="col-md-4">
        <div class="heading-featured">
          <h1>Liked Conversation</h1>
        </div>
      </div>

      <div class="col-md-2">

      </div>

      <div class="col-md-3">
        <%= render partial: 'users/conversations/filters', locals: { user: user, type: 'liked-conversations' } %>
      </div>
    </div>
  </div>

  <div class="row" id="liked-conversations">
  </div>

  <div class="row">
    <div class="col-md-12 pagination-div flex-sb">
      <div class="text-left">
        <%= link_to '← Previous Page', '#', remote: true, id: 'liked-conversations-previous', class: @liked_conversations&.previous_page ? '' : 'hidden' %>
      </div>

      <div class="text-right">
        <%= link_to 'Next Page →', '#', remote: true, id: 'liked-conversations-next', class: @liked_conversations&.next_page ? '' : 'hidden' %>
      </div>
    </div>
  </div>
  <hr>
</div>
