<div class="col-md-9">

  <h1><%= t('users.ambassador_label') %></h1>
  <hr>

  <table class="table table-striped table-bordered table-border-radius">
    <thead>
      <tr>
        <th><%= t('users.name_label') %></th>
        <th><%= t('users.email_label') %></th>
        <th><%= t('commission_label') %>(%)</th>
      </tr>
    </thead>

    <tbody>
      <% @brand_ambassador.each do |order| %>
        <tr>
          <td><%= order.name %></td>
          <td><%= order.email %></td>
          <td><%= best_in_place order, :commission, :url => set_commission_path(:id => order.id), class: "fa fa-pencil-square-o decimal-numbers" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $(document).ready(function() {
    jQuery(".best_in_place").best_in_place();
  });

  $(document).on("keypress", ".decimal-numbers", function(event) {
    var keycode = event.which;
    if(event.keyCode === 13 || event.keyCode === 9) {
        $(this).next().focus();
    }
    else if (!(event.shiftKey == false && (keycode == 46 || keycode == 8 || event.keyCode === 37 || event.keyCode === 39 || (keycode >= 48 && keycode <= 57)))) {
        event.preventDefault();
    }
  });
</script>
