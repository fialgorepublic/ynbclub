<div class="col-md-9">
  <div class="row">
    <div class="col-md-12">
      <div class="main">
        <h2> <i class="fa fa-exchange fa-lg fa-fw sidebar-icon"></i> <%= t('sidebar.exchange_coins_label') %></h2>
      </div>
      <hr>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="box-shadow">
        <div class="row">
          <div class="col-md-12">
            <%= form_tag generate_discount_code_users_path, id: "change-email-form" do |f| %>
              <%= hidden_field_tag :id, current_user.id %>

              <div class="row">
                <div class="col-md-4">
                  <label><%= t(:number_of_coin_label) %>:</label>
                </div>

                <div class="col-md-6">
                  <%= number_field_tag :coins, params[:coins], class: "form-control", required: true %>
                </div>

                <div class="col-md-10 text-right" style="margin-top: 2%;">
                  <%= submit_tag t(:exchange_label), class: "btn btn-lg btn-primary" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="main">
        <h2> <i class="fa fa-exchange fa-lg fa-fw sidebar-icon"></i> <%= t(:exchange_history_label) %></h2>
      </div>
      <hr>
    </div>
  </div>

  <table class="table table-striped table-bordered" id="shared-urls">
    <thead>
      <tr>
        <th><%= t('shared_urls.table_headers.id_label') %>#</th>
        <th><%= t(:discount_code_label) %></th>
        <th><%= t(:exchanged_coins_label) %></th>
        <th><%= t(:rewarded_discount_label) %></th>
      </tr>
    </thead>
    <tbody>
      <% @exchange_history.each do |history| %>
        <tr>
          <td><%= history.id %></td>
          <td><%= history.discount_code %></td>
          <td><%= history.exchanged_coins %></td>
          <td><%= format_amount_to_vnd(history.rewarded_amount) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
