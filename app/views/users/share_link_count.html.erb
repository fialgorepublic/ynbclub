<div class="col-md-9">

  <div class="row">
    <div class="col-md-12">
      <h1 class="card-header"><i class="fa fa-history"></i><%= t('invite.title') %> </h1>
      <hr>

      <div class="col-md-10">
        <div class="col-lg-12">
          <%= search_form_for @q, url: share_link_count_users_path do |f| %>
            <div class="input-group">
              <%= f.search_field :name_or_email_or_phone_number_cont, { class: 'form-control', placeholder: t('invite.search_placeholer'), id: 'search-field' } %>
              <span class="input-group-btn">
                <button class="btn btn-default btn-lg" id='clear-btn' type="button" data-url="<%= share_link_count_users_path %>">
                  <i class="fa fa-times" aria-hidden="true"></i>
                </button>
              </span>
            </div><!-- /input-group -->

            <br>
            <div class="text-center">
              <%= f.submit t(:search_label), class: 'btn btn-lg btn-primary' %>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>

  <br/>

  <div class="row m-t-30">
    <div class="col-md-12">
      <div class="card-body">
        <div class="affiliate_table_responsive">
          <table id="share-link-count-table" class="table table-striped table-bordered nowrap" style="width:100%">
            <thead>
              <tr>
                <th><%= t('users.username_label') %></th>
                <th><%= t('users.email_label') %></th>
                <th><%= t('users.phone_no_label') %></th>
                <th><%= t('invite.title') %></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><a href="/user_show?id=<%= user.id %>"><%= user.name %></a></td>
                  <td><%= user.email %></td>
                  <td><%= user.profile_phone_number %></td>
                  <td><%= user.share_link_count %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="featured-pagination">
    <div>
      <ul class="pagination pagination-md">
        <%= will_paginate @users,renderer: BootstrapPagination::Rails %>
      </ul>
    </div>
    <div>
    </div>
  </div>
</div>
