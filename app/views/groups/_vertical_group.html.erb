<div class="col-md-5 col-lg-5 m-p-0 ">
  <div class="groups-cards <%= custom_classes ? 'width-100pr' : '' %>">
    <div class="lib-panel <%= custom_classes ? 'left-10pr' : '' %>">
      <div class="row box-shadow">
        <div class="">
          <%= link_to group do %>
          <%= image_tag group.logo, width: '100%' , class: "lib-img-show", draggable: "false" %>
          <% end %>
        </div>
        <div class="">
          <% if current_user&.is_admin? %>
            <div class="lib-row lib-header">
              <div class="grp-edit-delete-icon <%= custom_classes ? 'right-icon-16px' : '' %>">
                <%= link_to edit_group_path(group), class: "bg-groups-circle" do %>
                  <i class="fa fa-pencil inneer" aria-hidden="true"></i>
                <% end %>
                <%= link_to "javascript:void(0)", data: { url: group_path(group.id), name: group.name }, class: "bg-groups-circle1 delete-group-link", id: "delete-group" do %>
                  <i class="fa fa-trash inneer" aria-hidden="true"></i>
                <% end %>
              </div>
            </div>
          <% end %>
          <div class="lib-row lib-desc">
            <h2><%= group.name %></h2>
            <span>
              <p class="groups-cards-p"><%= group.description %></p>
            </span>
          </div>
          <div class="grp-card-icon ">
            <i class="fa fa-users color-for-icon fs-20" width="100%"></i>
            <p class="m-para-srch"><%= group.users_count %></p>
            <i class="fa fa-comment color-for-icon fs-20" width="100%"></i>
            <p class="m-para-srch"><%= group.conversations_count %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
