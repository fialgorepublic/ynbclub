<div class="col-md-5 col-lg-5 m-p-0 ">
  <div class="groups-cards <%= custom_classes ? 'width-100pr' : '' %>">
    <div class="lib-panel <%= custom_classes ? 'left-10pr' : '' %>">
      <div class="row box-shadow">
        <div class="">
          <%= link_to group do %>
          <%= image_tag group.logo.variant(combine_options: { resize: '400x200^', gravity: 'Center', extent: '400x200^', background: "grey", quality: 95 }), width: '100%' , class: "lib-img-show" %>
          <% end %>
        </div>
        <div class="">
          <% if current_user&.is_admin? %>
            <div class="lib-row lib-header">
              <div class="grp-edit-delete-icon <%= custom_classes ? 'right-icon-16px' : '' %>">
                <%= link_to edit_group_path(group), class: "bg-groups-circle" do %>
                <i class="fa fa-pencil inneer" aria-hidden="true"></i>
                <% end %>
                <%= link_to "javascript:void(0)", data: { url: group_path(group), name: group.name }, class: "bg-groups-circle", id: "groups" do %>
                <i class="fa fa-trash inneer" aria-hidden="true"></i>
                <% end %>
              </div>
            </div>
          <% end %>
          <div class="lib-row lib-desc">
            <h2><%= group.name %></h2>
            <span>
              <p class="groups-cards-p"><%= group.description %></p>
            </span>
          </div>
          <div class="grp-card-icon ">
            <i class="fa fa-users color-for-icon fs-20" width="100%"></i>
            <p class="m-para-srch"><%= group.users_count %></p>
            <i class="fa fa-comment color-for-icon fs-20" width="100%"></i>
            <p class="m-para-srch"><%= group.conversations_count %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div id="group-delete-modal" class="modal fade groups-modal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close mob-close-btn" data-dismiss="modal">&times;</button>
      </div>

      <div class="modal-body">
        <div class="text-center">
          <h1 class="modall-title group-title"> </h1>
          <p>you will not be able to restore it then</p>
        </div>
        <div class="text-center">
          <div class="text-center">
            <%= link_to 'Yes', '', class: "btn btn-primary new_group-modal_b_btn", id: "delete-modal-group-link", method: :delete %>
            <a class="btn btn-primary new_group-modal_btn" , id='cancel-delete'>No</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>