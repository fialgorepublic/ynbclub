<script>
  $('.result--data').hide();
  $('.cross-icon').hide();
  $(".input-srch").on('keyup', function (e) {
    if (e.keyCode === 13) {
      e.preventDefault();
      $('.cross-icon').fadeIn();
      $('.result--data').fadeIn();
    }
  });
  $('.cross-icon').click(function () {
    $('.cross-icon').fadeOut();
    $('.result--data').fadeOut();
    $(".input-srch").val('');

  });


  $(".input-srch").on("input", function () {
    $('.cross-icon').fadeIn();
    $('.result--data').fadeIn();
    // clear the timer if it's already set:
    clearTimeout(timer);
    timer = setTimeout(function () {
      $('.cross-icon').fadeOut();
      $('.result--data').fadeOut();
      $(".input-srch").val('');
    }, 3000);
  });

</script>