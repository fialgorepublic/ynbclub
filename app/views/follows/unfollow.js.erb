activeTabEle = $('.tabbable-line').find('li.active')[0]
activeAnchorTag = $(activeTabEle).find('a')
userDiv = $(`#user-${<%= params[:id]%>}`);
followUnfollowButton = userDiv.find('a.profile-tag-btn-ad');
if(activeAnchorTag.attr('id') == 'following-tab') {
  followUnfollowButton.text('Follow Back');
  followUnfollowButton.attr('href', '<%= follow_follows_path(id: params[:id], current_user_id: params[:current_user_id]) %>')
}
else if (activeAnchorTag.attr('id') == 'follower-tab') {
    followUnfollowButton.text('Follow Back');
  } else if (userDiv.hasClass('user-list1')) {
      followUnfollowButton.text('Follow');
    } else followUnfollowButton.text('Follow');

if($(`#user-${<%= params[:id]%>}-following-count`).length > 0) {
  ele = $(`#user-${<%= params[:id]%>}-followers-count`)
}
else if($(`#user-${<%= params[:current_user_id]%>}-following-count`).length > 0) {
  ele = $(`#user-${<%= params[:current_user_id]%>}-following-count`)
}
followingCount = parseInt(ele.text())
if (followingCount > 0) { ele.text(followingCount - 1); }
followUnfollowButton.attr('href', '<%= follow_follows_path(id: params[:id], current_user_id: params[:current_user_id]) %>')
