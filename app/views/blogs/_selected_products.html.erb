<div class="row">
  <% @selected_products.each do |product| %>
      <div class="col-md-3">
        <div class="box-shadow-am sm-pd-am">
          <div class="product-box">
            <%= hidden_field_tag 'product[product_id][]', product.id %>
            <%= hidden_field_tag 'product[title][]', product.title %>
            <%= hidden_field_tag 'product[avatar][]', product.images.present? ? product.images[0].src : '' %>
            <%= hidden_field_tag 'product[price][]', product.variants.first.price %>
            <%= hidden_field_tag 'product[handle][]', product.handle %>
            <img width="80%" src="<%= product.images.present? ? product.images[0].src : '/placeholder.png' %>">
          </div>

          <div class="product-price">
            <h5><%= number_with_delimiter(product.variants.first.price, delimiter: '.') %>â‚«</h5>
          </div>

          <div class="product-detail">
            <p><%= product.title %></p>
          </div>
        </div>
      </div>

  <% end %>

