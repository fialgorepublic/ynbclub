<div class="row  m-t-30">
  <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="box-shadow-am sm-pd-am" onclick="showActive(this)">
          <h3>Product</h3>
          <div class="product-box">
            <img width="100%" src="<%= product.images.present? ? product.images[0].src : '/assets/placeholder.png' %>">
          </div>
          <div class="product-detail">
            <p><%= product.title %></p>
          </div>
          <div class="product-review">
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
          </div>
          <div class="product-price">
            <h5><%= product.variants.first.price %></h5>
          </div>
          <div class="product-offer">
            <p>20% we're getting from every purchase</p>
          </div>
        </div>

      </div>
  <% end %>
</div>

