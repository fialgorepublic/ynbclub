<div class="blog-box blog-box-sm">
  <div class="row">
    <div class="height-sm">
      <div class="col-md-12">
        <div class="blog-box-small-img" >
          <%= link_to blog do %>
            <%= image_tag blog.avatar.variable? ? blog.avatar.variant(combine_options: { resize: '330x180^', gravity: 'Center', extent: '330x180^', background: "grey", quality: 95 }) : blog.avatar, width: "100%" %>
          <% end %>
        </div>

        <div class="blog-box-content" data-toggle="modal" data-target="#myModal">
          <p class="blog-sm-p">
            <%= image_tag blog_author_avatar(blog), width: "30", class: "circle-img" %>
            <span class="with-un-blog"><%= blog_user_name(blog) %></span>
            <span><%= blog_date blog %></span>
            <span class="with-un-blog"><%= blog.category_name %></span>
          </p>
          <h3><%= blog_title blog %></h3>
        </div>
      </div>
    </div>
  </div>

  <%= render partial: 'blogs/common_options', locals: { blog: blog, blog_type: 'brief' } %>
</div>


  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <p>This is a large modal.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

