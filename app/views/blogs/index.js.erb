$('.loader').hide();
<% if params[:page].present? %>
  $('#blogs').append('<%= j render partial: "all_blogs", locals: { blogs: @blogs } %>');
<% else %>
  $('#blogs').html('<%= j render partial: "all_blogs", locals: { blogs: @blogs } %>');
<% end %>
$('#page').val('<%= @next_page %>')
$('#load-more').show();
currentPage = '<%= @blogs.current_page %>';
totalPages  = '<%= @blogs.total_pages %>';
if (currentPage == totalPages) {
  $('#load-more').hide();
}
