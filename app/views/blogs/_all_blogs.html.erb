<% if blogs.any? %>
  <% blogs.each_with_index do |blog, index| %>
    <% if index == 3 || index == 9 %>
      <div class="col-md-8">
        <%= render partial: 'blogs/expanded_blog', locals: { blog: blog } %>
      </div>
    <% else %>
      <div class="col-md-4">
        <%= render partial: 'blogs/brief_description', locals: { blog: blog } %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <div class="row">
    <div class="col-md-12 text-center unavailable-blog">
      <h1><%= t('blogs.index.blogs_not_found') %></h1>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $("img.lazy").lazyload({
    failure_limit : 1000,
    event: "lazyload",
    threshold : 1000,
    effect: "fadeIn",
    skip_invisible: false
    })
  $(window).scroll();
</script>
