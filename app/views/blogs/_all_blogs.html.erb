<% if blogs.any? %>
  <% blogs.each_with_index do |blog, index| %>
    <% if index == 3 || index == 9 %>
      <div class="col-md-8">
        <%= render partial: 'blogs/expanded_blog', locals: { blog: blog } %>
      </div>
    <% else %>
      <div class="col-md-4">
        <%= render partial: 'blogs/brief_description', locals: { blog: blog } %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <div class="row">
    <div class="col-md-offset-2 col-md-8 unavailable-blog">
    <h1> There is no any blog available for this category</h1>
    </div>
  </div>
<% end %>