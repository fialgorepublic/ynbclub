
<div class="<%= add_container %>">
  <div class="<%= blog_screen_size %>">
    <div class="banner ">
      <div class="<%= current_user.present? ? 'banner remove-space' : 'banner' %>">
        <% if @videos.any? %>
          <section id="features" class="blue">
            <div class="content">
              <div class="slider slider_video responsive_video_slider">
                <% @videos.each do |video| %>
                  <div class="m_slider_vid">
                    <div class="holder">
                      <div class="overlay trigger" src="https://www.youtube.com/embed/<%= video.url %>" data-target="#videoModal" data-toggle="modal">
                        <%= image_tag video.thumbnail, width: "100%", class: "lazy", lazy: true %>
                      </div>
                    </div>
                    <section class="entry-body">
                      <p class="video-title"><%= video.title %></p>
                    </section>
                  </div>
                <% end %>
              </div>
            </div>
          </section>
        <% end%>

        <%= search_form_for @q, remote: true do |f| %>
          <div class="col-md-12 blog_banner_btn">
            <div class="col-lg-12 padding-lr-20">
              <%= f.search_field :title_i_cont, { class: 'form-control set-border-radius', placeholder: 'Search by title', id: 'blog-title-textbox', style: 'height: 20px;' } %>
            </div>
          </div>

          <br>
          <br>

          <div class="row">
            <div class="col-md-12 blog_banner_btn class-z">
              <% if current_user&.is_admin? || current_user&.has_permission?('scrap_blogs', 'scrap_blogs') %>
                <%= link_to t('blogs.index.blog_libray_label'), scrap_blogs_path, class: 'btn blog_library btn-primary' %>
              <% end %>

              <% if current_user&.is_admin? %>
                <%= link_to t('blogs.index.edit_banner_label'), "javascript:void(0);", class: 'btn edit_banner_btn btn-primary', id: 'uploaderBanner' %>
              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="post-heading blog-redesign-style">
              <div class="col-md-1">
                <div class="heading-featured text-left">
                  <h1><%= t('blogs.index.page_title') %></h1>
                </div>
              </div>

              <% if @blogs.count > 0 %>
                <% if current_user %>
                  <div class="col-md-2">
                    <div class="post-sorting">
                      <p>Publish Status</p>
                      <%= f.select :is_published_eq, options_for_select([['Published', 1], ['Unpublished', 0]]), { include_blank: true }, { class: "sorting-fltr", id: 'publish-dropdown' } %>
                    </div>
                  </div>
                <% end %>

                <div class="col-md-2">
                  <div class="post-sorting">
                    <p>SORTING BY DATE</p>
                    <%= select_tag :sort_by, options_for_select([['Newest', 3], ['Oldest', 4]]), class: 'sorting-fltr', id: 'sort-blogs-by-date' %>
                  </div>
                </div>

                <div class="col-md-2">
                  <div class="post-sorting">
                    <p>SORTING</p>
                    <%= select_tag :sort_by, options_for_select([['A-Z', 1], ['Z-A', 2]]), class: 'sorting-fltr', id: 'sort-blogs' %>
                  </div>
                </div>

                <div class="col-md-2">
                  <div class="post-sorting">
                    <p>CATEGORY</p>
                    <%= f.select :category_id_eq, options_for_select(Category.pluck(:name, :id)), { include_blank: t(:All_Categories) }, { class: "sorting-fltr", id: 'category-dropdown' } %>
                  </div>
                </div>
              <% end %>

              <div class="col-md-3 add_blog_btn pull-right">
                <%#= link_to "+ #{t('blogs.index.add_new_blog_post')}", new_blog_path, class: "btn btn-primary new_blog_btn" if signed_in? %>
                <%= link_to "+ #{t('blogs.index.add_new_blog_post')}", '', class: "btn btn-primary new_blog_btn", id: "create-new-blog", data: { toggle: 'modal', target: '#new-blog' }, onclick: "create_blog()" if signed_in? %>
                <!-- <a class="btn btn-primary new_blog_btn" data-toggle="modal" href="#myModal">+ Start New Conversation</a> -->
              </div>

              <!-- <h2> <i class="fa fa-file"></i> Last Posts </h2> -->
            </div>
            <%= hidden_field_tag :page, @blogs.current_page  %>
            <%= f.submit 'search', class: 'hidden', id: 'search-form-button' %>
          </div>
        <% end %>

        <div class="row" id="blogs">
          <%= render partial: "all_blogs", locals: { blogs: @blogs } %>
        </div>
        <br />

        <%= hidden_field_tag :next_page, @next_page %>
        <%= render partial: 'shared/show_more', locals: { objects_collection: @blogs, url: blogs_path } %>
      </div>
    </div>
  </div>
</div>

<div id="bannerUploadModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <%= render 'blogs/upload_banner' %>
    </div>
  </div>
</div>

<div class="modal fade" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="videoModal" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <button type="button" class="close close_video_modal btn-round btn-primary bb" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>

    <div class="modal-content video-modal">
      <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="new-blog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
  <div class="modal-dialog" style="width: 80%">
    <div class="modal-content" style="width: 100%">
      <div class="modal-header">
        <button type="button" class="close" id="remove-modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">
          <span class="">Create New Blog</span>
        </h4>
      </div>

      <div id="create-blog">
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div  class="close_btn_blg">
          <button type="button" class="close close_btn_blg_in" data-dismiss="modal">&times;</button>
        </div>

        <div class="create-blog-modal">
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>

  $('#uploaderBanner').click(function () {
    $('#bannerUploadModal').modal('show');
  });

  $("div.descriptionBlog").text(function (index, currentText) {
    return currentText.substr(0, 300);
  });
  function set_featured_blog(obj, id) {
    {
      apprise('Are You Sure You Want To change Featured status?', { 'verify': true }, function (r) {
        if (r) {
          var obj_cls = $(obj).attr('class');
          var status = ''
          if (obj_cls === 'fa fa-star ') {
            $(obj).addClass('featureBlog');
            status = true
          } else {
            $(obj).removeClass('featureBlog');
            status = false
          }
          $.ajax({
            url: '/change_featured_state?id=' + id + '&value=' + status,
            type: 'get',
            dataType: 'json',
            processData: false,
            success: function (data) {
              window.location.reload();
            },
            error: function (data) {
              alert('Error');
              //    window.location.reload();
            }
          });
        }
        else {
        }
      });
    }
  }

  function blog_share(id, type, url) {
    var blogUrl = $('#blogUrl').val();

    $.ajax({
      url: '/share_blog?id=' + id + '&value=' + type,
      type: 'get',
      dataType: 'json',
      processData: false,
      success: function (data) {
        $('#blogUrl').val(parseInt(blogUrl) + 1);
        window.open(url);
      },
      error: function (data) {
        alert('Error');
        //    window.location.reload();
      }
    });
  }

  $(document).ready(function () {
    if (window.location.href.includes("new")) {
      $("#create-new-blog").trigger("click")
    }
    else if (window.location.href.includes("blog_id")) {
      id = window.location.href.split("=")[1]
      edit_new_blog(id)
    }
    $('.responsive_video_slider').not('.slick-initialized').slick({
        dots: false,
        arrows: true,
        centerMode: true,
     centerPadding: '10',
        infinite: true,
        speed: 300,
        slidesToShow: 3,
        slidesToScroll: 1,
        responsive: [{
            breakpoint: 1024,
            settings: {
                slidesToShow: 6,
                slidesToScroll: 1,
                // centerMode: true,

            }

        }, {
            breakpoint: 800,
            settings: {
                slidesToShow: 3,
                slidesToScroll: 2,
                dots: true,
                infinite: true,

            }


        }, {
            breakpoint: 600,
            settings: {
                slidesToShow: 2,
                slidesToScroll: 2,
                dots: true,
                infinite: true,

            }
        }, {
            breakpoint: 480,
            settings: {
                slidesToShow: 1,
                slidesToScroll: 1,
                dots: true,
                infinite: true,
                autoplay: true,
                autoplaySpeed: 2000,
            }
        }]
    });
    $(".responsive_video_slider").not('.slick-initialized').slick()

    autoPlayYouTubeModal();
  });

  function autoPlayYouTubeModal() {
    var trigger = $('.trigger');
    trigger.click(function (e) {
      e.preventDefault();
      var theModal = $(this).data("target");
      var videoSRC = $(this).attr("src");
      var videoSRCauto = videoSRC + "?autoplay=1";
      $(theModal + ' iframe').attr('src', videoSRCauto);
      $(theModal).on('hidden.bs.modal', function (e) {
        $(theModal + ' iframe').attr('src', '');
      });
    });
  };


  function create_blog(){
    var id = 0
    $.ajax({
      url: '/blogs/new',
      type: 'get',
      data: {id: id},
      success: function(data) {
        $('#create-blog').html(data);
        history.pushState({}, null, window.location.href + "/new")
      },
      error: function(data) {
        $('.loader').hide()
        alert('Something Wentwrong!')
      }
    })
  }

  function edit_new_blog(id){
    $.ajax({
      url: "blogs/"+id+"/edit",
      type: 'get',
      data: {edit_blog: 0},
      success: function(data) {
        $("#myModal").modal('hide')
        $("#new-blog").modal('show')
        $('#myModal').on('hidden.bs.modal', function () {
          // $('body').addClass('modal-open');
          // $('body').removeAttr('style');
          $('#create-blog').html(data);
          history.pushState({}, null, window.location.href + "/edit")
        })
      },
      error: function(data) {
        $('.loader').hide()
        alert('Something Wentwrong!')
      }
    })
  }


$( document ).ready(function() {
  if (window.location.href.includes("id")) {
    url = window.location.href.split("?")[0]
    blogId = window.location.href.split("=")[1]
    $("#myModal").modal('show')
    blog_show(blogId)
    history.pushState({}, null, url);
  }
  else {
  host = window.location.origin
  get_url = host+"/blogs"
  }

})
</script>
