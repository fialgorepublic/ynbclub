<div class="dashboard-holder">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "shared/side_bar" %>
    </div>
    <div class="col-md-9">
      <p id="notice"><%= notice %></p>

      <div class="row">
        <div class="col-md-12">
          <h3 class="card-header">Blogs</h3>
        </div>
        <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
          <thead>
          <tr>
            <th>Title</th>
            <th>Promote post</th>
            <th>Description</th>
            <th>Category</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @blogs.each do |blog| %>
              <tr>
                <td><%= blog.title %></td>
                <td><%= blog.promote_post %></td>
                <td><%= blog.description %></td>
                <td><%= blog.category_id %></td>
                <td><%= link_to 'Show', blog %></td>
                <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
                <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Blog', new_blog_path, class: 'btn btn-primary' %>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="card-blog-detail">
            <div class="row">
              <div class="col-md-3">
                <img width="100%" src="/assets/katerina-radvanska-397105-unsplash.jpg">
              </div>

              <div class="col-md-9">
                <div class="row">
                  <div class="col-md-6">
                    <p class="category-name">Category Name | <span>12:09:18</span></p>
                  </div>
                  <div class="col-md-6 text-right">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-edit"></i>
                    <i class="fa fa-trash"></i>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <h2>Blog Post name goes here</h2>
                    <p>Lorem Ipsum dolor sit amet Lorem Ipsum dolor sit amet Lorem Ipsum dolor sit ametLorem Ipsum dolor sit ametLorem Ipsum dolor sit amet Lorem Ipsum dolor sit amet  Lorem Ipsum dolor sit amet Lorem Ipsum dolor sit amet</p>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <i class="fa fa-heart"></i><span>123</span>

                     <i class="fa fa-share"></i><span>12</span>

                      <i class="fa fa-comment"></i><span>12</span>
                      <i class="fa fa-eye"></i><span>12</span>
                  </div>
                </div>

              </div>

            </div>
          </div>



        </div>
      </div>

    </div>
  </div>
</div>