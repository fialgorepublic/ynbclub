<%= form_with(model: point_type, local: true) do |form| %>
  <div class="form-group">
    <%= form.label t('point_types.table_headers.name_label') %>
    <%= form.text_field :name, id: :point_type_name, class: 'form-control', disabled: action_name == 'edit' ? true : false %>
  </div>

  <div class="form-group">
    <%= form.label t('point_types.table_headers.points_label') %>
    <%= form.text_field :point, id: :point_type_point, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit t('point_types.index.reward_label'), class: 'btn btn-success update-text'  %>
  </div>
<% end %>
