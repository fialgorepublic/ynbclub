<div class="dashboard-holder">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "shared/side_bar" %>
    </div>
    <div class="col-md-9">
      <p id="notice"><%= notice %></p>

      <h1>Point Types</h1>

      <table class="table">
        <thead>
        <tr>
          <th>Name</th>
          <th>Point</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @point_types.each do |point_type| %>
            <tr>
              <td><%= point_type.name %></td>
              <td><%= point_type.point %></td>
              <td><%= link_to 'Show', point_type %></td>
              <td><%= link_to 'Edit', edit_point_type_path(point_type) %></td>
              <td><%= link_to 'Destroy', point_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Point Type', new_point_type_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>