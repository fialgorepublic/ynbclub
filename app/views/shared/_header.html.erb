<div class="account-header-style">
  <header class="header-holder">
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/dashboard">
            <img src="https://cdn.shopify.com/s/files/1/1197/6404/files/saint_lbeau_logo_2-01_192x.png?v=1544811147">
          </a>
        </div>

        <div class="collapse navbar-collapse shared-header-custom-style" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><%= link_to t('header.home_label'), "https://shop.saintlbeau.com/" %></li>
            <li><%= link_to t('header.catalog_label'), "https://shop.saintlbeau.com/collections/all" %></li>
            <li><a href="/blogs"><%= t('unauthorized_header.blog_label') %></a></li>
            <li><%= link_to t('header.about_us_label'), "https://shop.saintlbeau.com/pages/about-us" %></li>
            <li>
              <% if current_user.is_admin? %>
                <a href="/users"><%= t('unauthorized_header.brand_ambassador_label') %></a>
              <% elsif current_user.is_buyer? %>
                <%= link_to t('unauthorized_header.brand_ambassador_label'), "#", id: "become-ambassador", data: { url: update_user_role_path, role_id: ambassador.id } %>
              <% end %>
            </li>
            <li><%= link_to t('unauthorized_header.store_label'), "https://saintlbeau.myshopify.com/" %></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
          <%= render 'shared/language_dropdown' %>

            <% if current_user.is_admin? ||  current_user.is_ambassador? %>
              <li>
                <%= link_to notifications_path do %>
                  <i class="fa fa-bell" style="margin-top: 1px;font-size: 17px;"></i>
                <% end %>
              </li>
            <% end %>

            <li>
              <div class="dropdown">
                <button class="btn btn-primary btn-none dropdown-toggle" type="button" data-toggle="dropdown">
                  <%= image_tag current_user.avatar.attached? ? current_user.avatar.variant(resize: "100x100") : "/assets/user-img.png", class: 'user-image-header' %>
                <span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li class="active">
                    <%= link_to t('header.logout_lable'), destroy_user_session_path, method: :delete, id: "logout-link" %></li>
                </ul>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
</div>
